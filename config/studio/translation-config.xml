<translation-config>

    <!-- List of codes for the supported locales -->
    <localeCodes>
        <localeCode>vi</localeCode>
        <localeCode>en</localeCode>
    </localeCodes>

    <!-- The code of the default locale for all new content -->
    <defaultLocaleCode>vi</defaultLocaleCode>

    <!-- Indicates if the default locale should be used when none of the resolvers can find a locale -->
    <fallbackToDefaultLocale>true</fallbackToDefaultLocale>

    <!-- List of locale resolvers -->
    <localeResolvers>
        <localeResolver>
            <type>urlPattern</type>
            <mappings>
                <mapping>
                    <pattern>.+/vi</pattern>
                    <localeCode>vi</localeCode>
                </mapping>
                <mapping>
                    <pattern>.+/en</pattern>
                    <localeCode>en</localeCode>
                </mapping>
            </mappings>
        </localeResolver>
        <localeResolver>
            <type>cookie</type>
        </localeResolver>
        <localeResolver>
            <type>header</type>
        </localeResolver>
        <localeResolver>
            <type>groovy</type>
            <script>/scripts/locale.groovy</script>
        </localeResolver>
    </localeResolvers>

</translation-config>
